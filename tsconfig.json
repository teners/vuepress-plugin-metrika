{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "commonjs",
    "newLine": "lf",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuepress-types/types"
    ],
    "types": [
      "vuepress-types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
